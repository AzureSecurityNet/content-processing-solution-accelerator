    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch with Yarn",
            "runtimeExecutable": "yarn",
            "args": ["start"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug with Yarn",
            "runtimeExecutable": "yarn",
            "args": ["start", "--inspect=9229"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}